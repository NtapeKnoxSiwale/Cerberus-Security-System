<!-- res/layout/trigger_item.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Trigger Name -->
    <TextView
        android:id="@+id/triggerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trigger Name"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- Room -->
    <TextView
        android:id="@+id/roomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room: Living Room"
        android:textSize="16sp"
        android:textColor="#666666"/>

    <!-- Max and Min -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/maxTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max:"
            android:textSize="16sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/minTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min:"
            android:textSize="16sp"
            android:textColor="#333333"/>
    </LinearLayout>

    <!-- Notification Type and Alert Type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/notificationTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification Type:"
            android:textSize="16sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/alertTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert Type:"
            android:textSize="16sp"
            android:textColor="#333333"/>
    </LinearLayout>
</LinearLayout>
