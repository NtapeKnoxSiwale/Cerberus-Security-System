<!-- res/layout/trigger_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp">

    <!-- Trigger Name -->
    <TextView
        android:id="@+id/triggerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trigger Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Room -->
    <TextView
        android:id="@+id/roomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room: Living Room"
        android:textColor="#666666"
        android:textSize="16sp" />

    <!-- Max and Min -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/maxTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max:"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/minTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min:"
            android:textColor="#333333"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Notification Type and Alert Type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notificationTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification Type:"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/alertTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert Type:"
            android:textColor="#333333"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
